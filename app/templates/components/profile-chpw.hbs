<div class="ui middle aligned center aligned grid">
  <div class="column" style="max-width: 450px;">
    <form class="ui large form" {{action "changePassword" on="submit"}}>
      {{#if infoMessage}}
        <div class="ui warning message visible">{{infoMessage}}</div>
      {{/if}}
      <div class="ui segment">
        <h4 class="ui dividing header aligned left">Aktuelles Passwort</h4>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i> {{input value=currentPassword type="password" placeholder="Aktuelles Passwort"}}
          </div>
        </div>
        <h4 class="ui dividing header aligned left">Neues Passwort</h4>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i> {{input value=newPassword_1 type="password" placeholder="Neues Passwort"}}
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i> {{input value=newPassword_2 type="password" placeholder="Neues Password (Wiederholung)"}}
          </div>
        </div>
        <button class="ui primary button fluid large submit" type="submit" disabled= {{isProcessing}}>Speichern</button>
      </div>
      {{#if loginFailed}}
        <div class="ui error message visible">{{errorMessage}}</div>
      {{/if}}
    </form>
  </div>
</div>