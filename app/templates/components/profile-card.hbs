<div class="ui card centered" style="width: 70%">
  <div class="content">
    <div class="header">{{profile.first_name}} {{profile.last_name}}</div>
    <div class="meta">
      <span>Im Verein seit dem {{moment-format profile.entry_date 'DD.MM.YYYY'}}</span>
    </div>
    
    <table class="ui celled striped table">
      <thead>
        <tr>
          <th colspan="2">Persönliche Daten</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="collapsing">Anrede</td>
          <td>{{profile.salutation}}</td>
        </tr>
        <tr>
          <td>Geburtstag</td>
          <td>{{moment-format profile.birthday 'DD.MM.YYYY'}}</td>
        </tr>
        <tr>
          <td>eMail</td>
          <td>{{profile.email}}</td>
        </tr>
        <tr>
          <td>Mitgliedsnummer</td>
          <td>{{profile.member_id}}</td>
        </tr>
        <tr>
          <td>Status</td>
          <td>{{profile-state profile.state}}</td>
        </tr>
        <tr>
          <td>Passwort</td>
          <td>Läuft ab am 30.09.2018 {{link-to "Ändern" "profile.chpw"}}</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
